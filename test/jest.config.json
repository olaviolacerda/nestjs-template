{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "modulePaths": ["<rootDir>"],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!**/main.ts",
    "!src/core/entities/**",
    "!src/core/modules/**",
    "!src/common/**",
    "!src/configurations/**"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node"
}
